class scmEqualF : scmBFunction {
	scmEqualF() {
		super(2)
	}

	eval(args) {
		super.eval(args)
		var a = args[0]
		var b = args[1]
		var res
		switch (a.tag) {
		case Tag.INTEGER:
			if (b.tag != Tag.INTEGER) {
				res = 0
			}
			else {
				res = a.val == b.val
			}
		case Tag.STRING:
			if (b.tag != Tag.STRING) {
				res = 0
			}
			else {
				res = a.str == b.str
			}
		case Tag.SYMBOL, Tag.TRUE, Tag.FALSE:
			res = a == b
		default:
			res = 0
		}
		if (res) {
			return G.scmTrue
		}
		return G.scmFalse
	}
}

