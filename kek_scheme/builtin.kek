class scmPlusF : scmBFunction {
	scmPlusF() {
		super(-1)
	}

	eval(args) {
		var sum = 0
		var i
		for (i = 0; i < args.length(); i++) {
			if (args[i].tag != Tag.INTEGER) {
				throw new EvalError("Argument expected to be an integer", args[i])
			}
			sum += args[i].val
		}
		return new scmInteger(sum)
	}
}

