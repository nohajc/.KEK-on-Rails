class scmCmdArgsF : scmBFunction {
	var argsVector

	scmCmdArgsF() {
		var i, elems = []
		var j = 0
		super(0)

		for (i = Scheme.cmdArgPtr; i < Scheme.cmdArgs.length(); i++) {
			elems[j] = new scmString(Scheme.cmdArgs[i])
			j++
		}
		argsVector = new scmVector(elems)
	}

	eval(args) {
		super.eval(args)
		return argsVector
	}
}

