class scmListF : scmBFunction {
	scmListF() {
		super(-1)
	}

	eval(args) {
		if (args.length() == 0) {
			return G.scmNil
		}
		var i
		var lst = new scmCons(args[0], G.scmNil)
		var next = lst
		for (i = 1; i < args.length(); i++) {
			next.cdr = new scmCons(args[i], G.scmNil)
			next = next.cdr
		}
		return lst
	}
}

