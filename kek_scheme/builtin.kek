class scmBFunction : scmObject {
	var numArgs
	scmBFunction(numArgs) {
		super(Tag.B_FUNCTION)
		this.numArgs = numArgs
	}

	eval(args) {
		var len = args.length()
		if (len != numArgs) {
			throw new ArgumentNumError(numArgs, len)
		}
	}
}

